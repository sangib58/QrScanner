<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.barcode.qrcodereader.QrGenerateFragment"
    android:id="@+id/scrollView"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinner_qr_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <Spinner
        android:id="@+id/spinner_img_size"
        android:layout_below="@id/spinner_qr_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"></Spinner>

    <View
        android:layout_below="@id/spinner_qr_type"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <View
        android:layout_below="@id/spinner_img_size"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <EditText
        android:id="@+id/urlInputId"
        android:layout_below="@+id/spinner_img_size"
        android:hint="URL"
        android:inputType="textUri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/textInputId"
        android:layout_below="@+id/spinner_img_size"
        android:hint="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/telephoneInputId"
        android:layout_below="@+id/spinner_img_size"
        android:hint="Telephone"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/contactLayoutId"
        android:layout_below="@+id/spinner_img_size"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nameId"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/titleId"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/organizationId"
            android:hint="Organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phoneId"
            android:hint="Phone No"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/emailId"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/webId"
            android:hint="Website"
            android:inputType="textUri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/addressId"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Nick Name"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/emailLayoutId"
        android:layout_below="@+id/spinner_img_size"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/mailtoId"
            android:hint="Mail to"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ccId"
            android:hint="CC"
            android:visibility="gone"
            android:inputType="textLongMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/subjectId"
            android:hint="Subject"
            android:inputType="textEmailSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/bodyId"
            android:hint="Body"
            android:inputType="textImeMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/smsLayoutId"
        android:layout_below="@+id/spinner_img_size"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/smsNumberId"
            android:hint="Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/smsTextId"
            android:hint="Sms Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/geoLayoutId"
        android:layout_below="@+id/spinner_img_size"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/latitudeId"
            android:hint="Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/longitudeId"
            android:hint="Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/wifiLayoutId"
        android:layout_below="@+id/spinner_img_size"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/wifiTypeId"
            android:hint="Wifi Type"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ssidId"
            android:hint="SSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/passwordId"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/resultImgId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    <ImageView
        android:id="@+id/shareImgId"
        android:src="@drawable/ic_share"
        android:layout_below="@+id/resultImgId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/saveImageId"
        android:layout_below="@+id/resultImgId"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_file_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_generate_qr"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="@string/generate_button"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    </RelativeLayout>

</ScrollView>







